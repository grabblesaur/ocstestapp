<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

		<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

		<ScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<FrameLayout
								android:layout_margin="@dimen/default_margin"
								android:layout_width="match_parent"
								android:layout_height="@dimen/company_logo_size">

								<ImageView
										android:id="@+id/companyLogoImageView"
										android:scaleType="fitCenter"
										android:layout_width="match_parent"
										android:layout_height="match_parent" />

						</FrameLayout>

						<com.google.android.material.card.MaterialCardView
								android:layout_margin="@dimen/default_margin"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">

								<LinearLayout
										android:orientation="vertical"
										android:layout_width="match_parent"
										android:layout_height="match_parent">

										<TextView
												android:id="@+id/createdOnTextView"
												tools:text="14 March 2019"
												android:textSize="16sp"
												android:padding="@dimen/default_padding"
												android:layout_width="match_parent"
												android:layout_height="wrap_content" />

										<TextView
												android:id="@+id/titleTextView"
												tools:text="Senior C++ Developer - Candy Crush Franchise"
												android:textStyle="bold"
												android:textSize="20sp"
												android:padding="@dimen/default_padding"
												android:layout_width="match_parent"
												android:layout_height="wrap_content" />

										<LinearLayout
												android:padding="@dimen/default_padding"
												android:orientation="horizontal"
												android:layout_width="match_parent"
												android:layout_height="wrap_content">

												<TextView
														android:text="@string/city"
														android:layout_marginRight="@dimen/default_margin"
														android:textSize="16sp"
														android:textStyle="bold"
														android:layout_width="wrap_content"
														android:layout_height="wrap_content" />

												<TextView
														tools:text="Moscow"
														android:id="@+id/locationTextView"
														android:textSize="16sp"
														android:layout_width="wrap_content"
														android:layout_height="wrap_content" />

										</LinearLayout>

										<LinearLayout
												android:padding="@dimen/default_padding"
												android:orientation="horizontal"
												android:layout_width="match_parent"
												android:layout_height="wrap_content">

												<TextView
														android:layout_marginRight="@dimen/default_margin"
														android:textStyle="bold"
														android:textSize="16sp"
														android:text="@string/job_type"
														android:layout_width="wrap_content"
														android:layout_height="wrap_content" />

												<TextView
														android:id="@+id/typeTextView"
														tools:text="Full Time"
														android:textSize="16sp"
														android:layout_width="wrap_content"
														android:layout_height="wrap_content" />

										</LinearLayout>


								</LinearLayout>


						</com.google.android.material.card.MaterialCardView>

						<com.google.android.material.card.MaterialCardView
								android:layout_margin="@dimen/default_margin"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">

								<TextView
										android:id="@+id/descriptionTextView"
										android:text="@string/tools_desc"
										android:textSize="16sp"
										android:lineSpacingMultiplier="1.4"
										android:padding="@dimen/default_padding"
										android:layout_width="match_parent"
										android:layout_height="wrap_content" />

						</com.google.android.material.card.MaterialCardView>


				</LinearLayout>


		</ScrollView>

</LinearLayout>